{
  "name": "campustrace-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@campustrace/web",
    "dev:mobile": "npm run start --workspace=@campustrace/mobile",
    "build:web": "npm run build --workspace=@campustrace/web",
    "build:mobile": "npm run build --workspace=@campustrace/mobile",
    "lint": "npm run lint --workspaces --if-present",
    "install:all": "npm install"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
